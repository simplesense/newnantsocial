<div class="row">
    <div class="span6 offset3">
        <div class="well">
            <p>
              <h4><%= @pin.description %></h4>
            </p>
            <p>
              <%= @pin.user.name %>
            </p>
            <p>
            	<small><%= time_ago_in_words(@pin.created_at) %></small>
            </p>
            <% if current_user == @pin.user %>
            <%= link_to 'Edit', edit_pin_path(@pin) %> |
            <% end %>
            <%= link_to 'Back', pins_path %>
        </div>
    </div>
</div>